{
  "name": "express-wol",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/backend",
    "packages/frontend"
  ],
  "devDependencies": {
    "@types/node": "^22.18.8",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build": "npm run --workspaces build",
    "start": "npm run --workspaces start",
    "dev": "npm run --workspaces dev",
    "clean": "rm -rf node_modules && npm run --workspaces clean",

    "docker-compose-up": "docker compose up -d",
    "docker-compose-stop": "docker compose stop",
    "docker-compose-down": "docker compose down"
  }
}